{
    "compilerOptions": {
        "outDir": "./docs/assets/components",
        "sourceMap": false,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "es6",
        "module": "es2015",
        "allowJs": true,
        "checkJs": true,
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./docs"
    ]
}